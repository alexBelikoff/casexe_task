{% block javascripts %}
    {{ parent() }}
    <script>

    $(function(){
        $('#get_prize_btn').on('click',function () {
            let url = Routing.generate('get_prize');
            $.post( url, function( data ) {
                console.log(data);
                $('#get_prize_btn').hide();
                $('#prize_section').show();
                $('#prize_section_title').text(data.title);
                $('#prize_section_summ').text(data.summ);
                $('#prize_section_gift').text(data.gift);
                $('#prize_id').val(data.id);

                $('#reject_prize_btn').show();

                if(data.type === 'loyalty'){
                    $('#enroll_loyalty_btn').show();
                }
                if(data.type === 'money'){
                    $('#sent_money_to_bank_btn, #convert_money_to_loyalty_prize_btn').show();
                }
                if(data.type === 'gift'){
                    $('#sent_gift_by_post_btn').show();
                }
            });
        });

        $('#enroll_loyalty_btn').on('click',function () {
            $('#get_prize_btn').show();
            $('#prize_section').hide();
        });

        $('#sent_gift_by_post_btn').on('click',function () {
            let id = $('#prize_id').val(), url = Routing.generate('sent_gift_by_post');
            $.post( url,{id:id}, function( data) {
                alert(data.message);
                $('#get_prize_btn').show();
                $('#prize_section').hide();
            });
        });

        $('#reject_prize_btn').on('click',function () {
            let id = $('#prize_id').val(), url = Routing.generate('reject_prize');
            $.post( url,{id:id}, function( data) {
                alert(data.message);
                $('#get_prize_btn').show();
                $('#prize_section').hide();
            });

        });

        $('#sent_money_to_bank_btn').on('click',function () {
            let id = $('#prize_id').val(), url = Routing.generate('sent_money_to_bank');
            $.post( url,{id:id}, function( data) {
                alert(data.message);
                $('#get_prize_btn').show();
                $('#prize_section').hide();
            });
        });

        $('#convert_money_to_loyalty_prize_btn').on('click',function () {
            let id = $('#prize_id').val(), url = Routing.generate('convert_money_prize_to_loyalty');
            $.post( url,{id:id}, function( data) {
                alert(data.message);
                $('#get_prize_btn').show();
                $('#prize_section').hide();
            });
        });
    });
    </script>
