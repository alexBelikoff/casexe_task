{% extends 'base.html.twig' %}
{% block body %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
    <div class="mai-wrapper mai-login">
        <div class="main-content container">
            <div class="splash-container row">
                <div class="col-md-6 user-message"></div>
                <div class="col-md-6 form-message">
                    <span class="splash-description text-center mt-5 mb-5">Вход в систему</span>
                    <form action="{{ path("login") }}" method="post" class="form-signin">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend"><i class="icon s7-user"></i></div>
                                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.username'|trans }}"
                                       autocomplete="off" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend"><i class="icon s7-lock"></i></div>
                                <input type="password" id="password" name="_password" required="required" placeholder="{{ 'security.password'|trans }}" class="form-control">
                            </div>
                        </div>
                        <div class="form-group login-submit">
                            <button data-dismiss="modal" id="_submit" name="_submit" type="submit" class="btn btn-lg btn-primary btn-block">{{ 'security.submit'|trans }}</button>
                        </div>
                        <div class="form-group row login-tools">
                            <div class="col-sm-6 login-remember">
                                <label class="custom-control custom-checkbox mt-2">
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" class="custom-control-input"><span class="custom-control-label">{{ 'security.remember_me'|trans }}</span>
                                </label>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
